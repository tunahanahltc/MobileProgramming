<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN_BG"
    android:id="@+id/xx"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="216dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="52dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/user_1177568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        />

    <TextView
        android:id="@+id/textView7"
        style="@style/TEXT_BG"
        android:layout_width="65dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:text="İsim :"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_mail"
        style="@style/TEXT_BG"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="24dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_studentId"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_phone"
        style="@style/TEXT_BG"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="120dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        style="@style/TEXT_BG"
        android:layout_width="63dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:text="Öğrenci \nNo : "
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        style="@style/TEXT_BG"
        android:layout_width="62dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:text="Eğitim :"
        android:textStyle="bold|italic"

        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_educate"
        style="@style/TEXT_BG"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="12dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_phone"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_studentId"
        style="@style/TEXT_BG"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_educate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_name"
        style="@style/TEXT_BG"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="12dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_mail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        style="@style/TEXT_BG"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="124dp"
        android:text="Tel no: "
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        style="@style/TEXT_BG"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="48dp"
        android:text="E-Mail :"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/statu"
        android:layout_width="109dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        style="@style/TEXT_BG"
        android:textStyle="bold|italic"
        android:layout_marginTop="16dp"
        android:text="Statü :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="97dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="Kaydet"
        style="@style/BUTTON_BG"
        android:background="@drawable/button_round_style"
        android:backgroundTint="@color/button_color"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="Düzenle"
        style="@style/BUTTON_BG"
        android:background="@drawable/button_round_style"
        android:backgroundTint="@color/button_color"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>